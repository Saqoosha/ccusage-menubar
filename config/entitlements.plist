<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime entitlements for notarization -->
    <!-- These settings ensure the app meets Apple's security requirements -->
    
    <!-- Disable dangerous capabilities for security -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <false/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <false/>
    
    <!-- Network access for currency conversion API -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File system access for reading Claude Code usage logs -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Allow access to user's home directory for .claude folder -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- System preference access for currency locale detection -->
    <key>com.apple.security.system-preference.read-only</key>
    <true/>
    
    <!-- Camera and microphone access (disabled for security) -->
    <key>com.apple.security.device.camera</key>
    <false/>
    <key>com.apple.security.device.microphone</key>
    <false/>
    
    <!-- Location services (not needed for this app) -->
    <key>com.apple.security.personal-information.location</key>
    <false/>
    
    <!-- Contacts, calendar, photos access (not needed) -->
    <key>com.apple.security.personal-information.addressbook</key>
    <false/>
    <key>com.apple.security.personal-information.calendars</key>
    <false/>
    <key>com.apple.security.personal-information.photos-library</key>
    <false/>
    
    <!-- Bluetooth and USB access (not needed) -->
    <key>com.apple.security.device.bluetooth</key>
    <false/>
    <key>com.apple.security.device.usb</key>
    <false/>
    
    <!-- Printing (not needed for this app) -->
    <key>com.apple.security.print</key>
    <false/>
    
    <!-- Audio input/output (not needed) -->
    <key>com.apple.security.device.audio-input</key>
    <false/>
</dict>
</plist>